{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "jsx": "react",
    "baseUrl": "./",
    "target": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src",
    "./.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
